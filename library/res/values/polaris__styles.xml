<resources>

    <style name="TextAppearance.Polaris" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/polaris__primary</item>
        <item name="android:textSize">@dimen/polaris__font_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorLink">#33b5e5</item>
        <item name="android:textColorHighlight">#000000</item>
    </style>

    <style name="TextAppearance.Polaris.MapCallout" />

    <style name="TextAppearance.Polaris.MapCallout.Title">
        <item name="android:textColor">@color/polaris__primary</item>
        <item name="android:textSize">@dimen/polaris__font_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Polaris.MapCallout.Subtitle">
        <item name="android:textColor">@color/polaris__secondary</item>
        <item name="android:textSize">@dimen/polaris__font_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.Polaris.Cluster" />
    
    <style name="TextAppearance.Polaris.Cluster.Pin">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/polaris__font_size_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>